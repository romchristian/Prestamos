<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Production</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>home/home.xhtml</welcome-file>
    </welcome-file-list>
    <security-constraint>
        <display-name>Constraint1</display-name>
        <web-resource-collection>
            <web-resource-name>home</web-resource-name>
            <description/>
            <url-pattern>/home/*</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>adm</web-resource-name>
            <description/>
            <url-pattern>/adm/*</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>prestamos</web-resource-name>
            <description/>
            <url-pattern>/prestamos/*</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>reportes</web-resource-name>
            <description/>
            <url-pattern>/reportes/*</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>resources</web-resource-name>
            <description/>
            <url-pattern>/resources/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>
    
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>prestamosJDBC</realm-name>
        <form-login-config>
            <form-login-page>/login.xhtml</form-login-page>
            <form-error-page>/error.xhtml</form-error-page>
        </form-login-config>
    </login-config>
    <error-page>
        <error-code>
            403
        </error-code>
        <location>/sinpermiso.xhtml</location>
    </error-page>
    <security-role>
        <description/>
        <role-name>admin</role-name>
    </security-role>
    
    <security-role>
        <description/>
        <role-name>cliente_lectura</role-name>
    </security-role>
    
    <security-role>
        <description/>
        <role-name>cliente_edicion</role-name>
    </security-role>
    
    <security-role>
        <description/>
        <role-name>prestamos_lectura</role-name>
    </security-role>
    
    <security-role>
        <description/>
        <role-name>prestamos_edicion</role-name>
    </security-role>
    
    <security-role>
        <description/>
        <role-name>prestamos_imprime_pagare</role-name>
    </security-role>
    
    <security-role>
        <description/>
        <role-name>prestamos_confirma_pagare</role-name>
    </security-role>
    
    <security-role>
        <description/>
        <role-name>prestamos_cancela_pagare</role-name>
    </security-role>
    
    <security-role>
        <description/>
        <role-name>prestamos_desembolsa</role-name>
    </security-role>
    
    <security-role>
        <description/>
        <role-name>cobro_cuota</role-name>
    </security-role>
    
    <security-role>
        <description/>
        <role-name>configuraciones</role-name>
    </security-role>
    
    
</web-app>
